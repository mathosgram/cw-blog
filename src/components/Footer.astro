---
import Hr from "./Hr.astro";




export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div class="flex flex-col items-center justify-center py-6 sm:py-4">
    <div class="my-2 text-center">
      <span class="text-sm text-foreground/60">Stack</span>
    </div>
  </div>
</footer>
